<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>
  <body>

    <nav class="navbar navbar-toggleable-md navbar-light navbar-inverse bg-inverse">
  <button class="navbar-toggler navbar-toggler-right bg-primary" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="title">
  <a class="navbar-brand"> <%= link_to "Flixter", root_path %>
  </a>
</div>

  <!-- begin top nav collapse menu -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">

    <!-- top nav item -->
    <ul class="navbar-nav">

      <% if user_signed_in? %>

        <li class="nav-item">
            <%= 'A user is signed in!' %>
          </li>
          <br />
          <li class="nav-item">
            <%= link_to 'My Dashboard', dashboard_path %>
          </li>

        <% end %>

    </ul>
</li>
      
    <ul class="navbar-nav">

      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link text-primary' %>
        </li>

        <li class="nav-item">
            <%= link_to "See All Courses", courses_path %>
        </li>

      <% else %>

        <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: 'nav-link text-primary' %>

        </li>


        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link text-primary' %>
      </li>

        <li class="nav-item">
            <%= link_to "See All Courses", courses_path %>
        </li>
      <% end %>

    </ul>
    
</nav>


    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>

    <% if alert.present?%>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
      <b>Teachers</b>
      <br />
      <%= link_to 'Teach a Course', new_instructor_course_path %>
      <br />
      <%= link_to 'My Dashboard', dashboard_path %>
    </div>
    <div class="col-12 col-sm-3">
      <b>About</b>
      <br />
      <%= link_to 'Team', '#' %>
      <br />
      <%= link_to 'Careers', '#' %>
      <br />
      <%= link_to 'Privacy Policy', '#' %>
    </div>
    <div class="col-12 col-sm-3">
      <b>Contact</b>
      <br />
      anson.melakayil@yahoo.com
      <br />
      8412 Tie Stone Way
      <br />
      Raleigh NC, 27613
    </div>
    <div class="col-12 col-sm-3 social">
      &nbsp;&nbsp;&nbsp;<b>GitHub</b>
      <br />
      <%= link_to 'http://github.com/ansonmela', target: :_blank do %>
        <span class="fa fa-github-square fa-5x social-button"></span>
      <% end %>
    </div>
</div>
  
 </body>
</html>
