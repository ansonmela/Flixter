<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar navbar-toggleable-md navbar-light navbar-inverse bg-inverse">
  <button class="navbar-toggler navbar-toggler-right bg-primary" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="title">
  <a class="navbar-brand"> <%= link_to "Flixter", root_path %>
  </a>
</div>

  <!-- begin top nav collapse menu -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">

    <!-- top nav item -->
    <ul class="navbar-nav">

      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'A user is signed in!' %>
        </li>

      <% else %>
        <li class="nav-item">
          <%='No user is signed in :('%>
        </li>
      <% end %>

    </ul>
</li>
      
    <ul class="navbar-nav">

      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Sign out", 'destroy_user_session', method: :delete, class: 'nav-link text-primary' %>

      <% else %>

        <li class="nav-item">
            <%= link_to "Sign in", 'new_user_session_path', class: 'nav-link text-primary' %>

        </li>


        <li class="nav-item">
          <%= link_to "Sign up", 'new_user_registration_path', class: 'nav-link text-primary' %>
      </li>
      <% end %>

    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>


    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>

    <% if alert.present?%>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <b>Footer Here</b>
      <br />
      <%= link_to 'Link', '#' %>
    </div>
  </div>
 </body>
</html>
